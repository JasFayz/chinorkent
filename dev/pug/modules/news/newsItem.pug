mixin newsItem(image, desc, link, delay)
    .col-xl-4.col-lg-4.col-md-4 
        .news__item(data-aos="fade-left" data-aos-duration="1000" data-aos-delay=delay)
            .news__image 
                img(src=image alt="")
            .news__desc=desc
            a.news__link(href=link)   
                span.title ПОДРОБНЕЕ
                span.icon 
                    svg( viewBox="0 0 94 17" height="20" width="94" fill="#00489A")
                        use(xlink:href="static/images/svg/symbol/sprite.svg#news_arrow")